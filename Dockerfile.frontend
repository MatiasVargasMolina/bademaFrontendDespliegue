# Etapa build
FROM node:18-alpine AS builder
WORKDIR /app

# Copia solo los package.json de frontend
COPY frontend/package*.json ./
RUN npm install

# Copia el resto desde frontend y build
COPY frontend/. .
RUN npm run build

# Etapa producci√≥n
FROM nginx:stable-alpine
COPY --from=builder /app/dist /usr/share/nginx/html
EXPOSE 80
CMD ["nginx","-g","daemon off;"]